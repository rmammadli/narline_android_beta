<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.newo.newoapp.narline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llDescriptionFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="@dimen/margin_small"
            app:centered="true"
            app:fillColor="@color/white"
            app:pageColor="@color/white_trans"
            app:radius="@dimen/viewpager_indicator_radius"
            app:strokeColor="@color/h_blue"
            app:strokeWidth="@dimen/viewpager_indicator_stroke_width" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_buttons_dvider"
            android:background="@color/transparent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnDimenStandart"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_simple_blue"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvBtnFacebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_btn_facebook_login"
                android:textColor="@color/white"
                android:textSize="@dimen/TextSizeMedium" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_buttons_dvider"
            android:background="@color/transparent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnDimenStandart"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_simple_blue"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tvBtnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/text_btn_register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/TextSizeMedium" />
            </LinearLayout>

            <View
                android:id="@+id/view3V"
                android:layout_width="@dimen/footer_buttons_dvider"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnDimenStandart"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_simple_blue"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tvBtnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/text_btn_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/TextSizeMedium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- <View style="@style/ShadowHorizontalUpSmall" /> -->

</LinearLayout>