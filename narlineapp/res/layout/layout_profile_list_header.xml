<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.newo.newoapp.narline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/h_blue"
    android:clickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llUserInfoProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="@dimen/margin_small" >

        <RelativeLayout
            android:id="@+id/llUserImageProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:clickable="false"
            android:orientation="vertical" >

            <com.newo.newoapp.RoundedImageView
                android:id="@+id/rimgUserImageProfile"
                android:layout_width="@dimen/profile_user_image_dimension"
                android:layout_height="@dimen/profile_user_image_dimension"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_pofile_image"
                app:border_color="@drawable/selector_menu_item_text_to_gray"
                app:border_width="@dimen/roudned_image_border_dimension"
                app:corner_radius="@dimen/profile_user_image_corner_radius" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llUserTextProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/TextSizeLarge" />

            <TextView
                android:id="@+id/tvUsernameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:gravity="center"
                android:text="@string/username"
                android:textColor="@color/white"
                android:textSize="@dimen/TextSizeSmall" />

            <TextView
                android:id="@+id/tvPhoneNumberProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:gravity="center"
                android:text="@string/phone_number"
                android:textColor="@color/white"
                android:textSize="@dimen/TextSizeSmall" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>