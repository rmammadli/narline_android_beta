<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFeedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Socail Settings Header Texts -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_small" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/btnDimenStandart"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvFeedback1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_header_1"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/TextSizeSmall" />

            <TextView
                android:id="@+id/tvFeedback2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_header_2"
                android:textColor="@color/d_gray"
                android:textSize="@dimen/TextSizeLarge" />
        </LinearLayout>

        <!-- Socail Settings Facebook -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlFeedbackIlove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_white"
                android:clickable="true" >

                <LinearLayout
                    android:id="@+id/llFeedbackILoveNeWo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgFeedbackILoveNeWo"
                        android:layout_width="@dimen/social_icon_dimensionsXL"
                        android:layout_height="@dimen/social_icon_dimensionsXL"
                        android:background="@drawable/icon_nar_heart" />

                    <TextView
                        android:id="@+id/tvFeedbackILoveNeWo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_header_i_love_newo"
                        android:textColor="@drawable/selector_menu_item_text"
                        android:textSize="@dimen/TextSizeMedium" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Socail Settings Twitter -->

            <RelativeLayout
                android:id="@+id/rlFeedbackSendFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_white"
                android:clickable="true" >

                <LinearLayout
                    android:id="@+id/llFeedbackSendFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgFeedbackSendFeedback"
                        android:layout_width="@dimen/social_icon_dimensionsXL"
                        android:layout_height="@dimen/social_icon_dimensionsXL"
                        android:background="@drawable/icon_nar_plane" />

                    <TextView
                        android:id="@+id/tvFeedbackSendFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_header_send_feedback"
                        android:textColor="@drawable/selector_menu_item_text"
                        android:textSize="@dimen/TextSizeMedium" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>