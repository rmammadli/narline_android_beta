<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="@color/facebook_color" android:startColor="@color/facebook_color" />

            <stroke android:width="8dp" android:color="@color/facebook_color" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:endColor="@color/facebook_color" android:startColor="@color/facebook_color" />

            <stroke android:width="8dp" android:color="@color/transparent" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>